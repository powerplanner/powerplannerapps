<views:PopupViewHostGeneric
    xmlns:views="using:PowerPlannerUWP.Views"
    x:Class="PowerPlannerUWP.Views.RecoveredUsernamesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPlannerUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="USERNAMES">

    <views:PopupViewHostGeneric.MainContent>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <TextBlock
                    x:Name="TextBlockExplanation"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,12,12"/>

                <TextBlock
                    x:Name="TextBlockUsernames"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="12,0,12,12"
                    IsTextSelectionEnabled="True"/>

                <Button
                    x:Name="ButtonOk"
                    Style="{StaticResource SubitemButtonStyle}"
                    Content="Ok"
                    Click="ButtonOk_Click"
                    Margin="12"/>


            </StackPanel>
        </ScrollViewer>
    </views:PopupViewHostGeneric.MainContent>

</views:PopupViewHostGeneric>