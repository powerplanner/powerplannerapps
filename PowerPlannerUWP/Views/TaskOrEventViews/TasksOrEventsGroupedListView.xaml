<UserControl
    x:Class="PowerPlannerUWP.Views.TaskOrEventViews.TasksOrEventsGroupedListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPlannerUWP.Views.TaskOrEventViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:agenda="using:PowerPlannerAppDataLibrary.ViewModels.MainWindow.MainScreen.Agenda">

    <UserControl.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <local:TaskOrEventListViewItem/>
        </DataTemplate>
        <DataTemplate x:Key="HeaderTemplate" x:DataType="agenda:ItemsGroupHeader">
            <local:TasksOrEventsListHeader
                Header="{x:Bind}"
                DateToUseForNewItems="{x:Bind DateToUseForNewItems, Mode=OneTime}"
                Classes="{x:Bind Classes, Mode=OneTime}"/>
        </DataTemplate>
    </UserControl.Resources>

    <winui:ItemsRepeaterScrollHost>
        <ScrollViewer>
            <winui:ItemsRepeater ItemsSource="{x:Bind ItemsSource, Mode=OneWay}" Margin="20">
                <winui:ItemsRepeater.ItemTemplate>
                    <local:GroupedListViewTemplateSelector
                        ItemTemplate="{StaticResource ItemTemplate}"
                        HeaderTemplate="{StaticResource HeaderTemplate}"/>
                </winui:ItemsRepeater.ItemTemplate>
                <winui:ItemsRepeater.Layout>
                    <local:GroupedLayout/>
                </winui:ItemsRepeater.Layout>
            </winui:ItemsRepeater>
        </ScrollViewer>
    </winui:ItemsRepeaterScrollHost>
</UserControl>
