<interfacesViews:ViewHostGeneric
    xmlns:interfacesViews="using:InterfacesUWP.Views"
    xmlns:interfaces="using:InterfacesUWP"
    x:Class="PowerPlannerUWP.Views.SettingsViews.MainTileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:localConverters="using:PowerPlannerUWP.Converters"
    xmlns:data="using:PowerPlannerAppDataLibrary">

    <interfacesViews:ViewHostGeneric.Resources>

        <localConverters:SkipItemsToStringConverter x:Key="SkipItemsToStringConverter"/>

    </interfacesViews:ViewHostGeneric.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel Margin="20">
                <TextBlock
                    Text="{x:Bind data:R.S('Settings_Tiles_MainTile_Header.Text')}"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Margin="0,0,0,12"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Settings_Tiles_MainTile_Description.Text')}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="0,12,0,12"/>

                <ToggleSwitch
                    x:Name="ToggleTasks"
                    Header="{x:Bind data:R.S('Settings_Tiles_MainTile_ToggleTasks.Header')}"
                    IsOn="{x:Bind ViewModel.Account.MainTileSettings.ShowTasks, Mode=OneWay}"
                    Toggled="ToggleTasks_Toggled"/>

                <ToggleSwitch
                    x:Name="ToggleEvents"
                    Header="{x:Bind data:R.S('Settings_Tiles_MainTile_ToggleEvents.Header')}"
                    IsOn="{x:Bind ViewModel.Account.MainTileSettings.ShowEvents, Mode=OneWay}"
                    Toggled="ToggleEvents_Toggled"
                    Margin="0,12,0,0"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipItemsExplanation.Text')}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Margin="0,12,0,0"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipItems.Text')}"
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Margin="0,12,0,0"/>

                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,6,0,0">

                    <TextBox
                        x:Name="TextBoxSkipAssignments"
                        InputScope="Number"
                        Text="{x:Bind ViewModel.Account.MainTileSettings.SkipItemsOlderThan, Mode=OneWay, Converter={StaticResource SkipItemsToStringConverter}}"
                        Width="64"
                        TextChanged="TextBoxSkipAssignments_TextChanged"/>

                    <TextBlock
                        x:Name="Tile_DaysPastToday"
                        Text="{x:Bind data:R.S('Tile_DaysPastToday.Text')}"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Margin="12,0,0,0"
                        VerticalAlignment="Bottom"/>

                </StackPanel>

                <TextBlock
                    x:Name="TextBlockSkipItemsError"
                    Text="{x:Bind data:R.S('Tile_SkipItemsError.Text')}"
                    Foreground="Red"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Visibility="Collapsed"/>


                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipExplanation0.Text')}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Margin="0,12,0,0"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipExplanation1.Text')}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Margin="0,12,0,0"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipExplanation2.Text')}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Margin="0,12,0,0"/>

                <TextBlock
                    Text="{x:Bind data:R.S('Tile_SkipExplanationBlank.Text')}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Margin="0,12,0,0"/>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</interfacesViews:ViewHostGeneric>