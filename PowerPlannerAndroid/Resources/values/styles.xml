<?xml version="1.0" encoding="utf-8" ?>
<resources>
        
    <style name="ItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EFEFEF</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AddItemButton" parent="BorderlessButton">
        <item name="icon">@android:drawable/ic_input_add</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AddItemButtonContained" parent="Widget.MaterialComponents.Button.Icon">
      <item name="icon">@android:drawable/ic_input_add</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="backgroundTint">@color/yearBackground</item>
      <item name="android:textColor">@color/accent</item>
      <item name="iconTint">@color/accent</item>
    </style>

  <style name="AddItemButtonTopLevel" parent="AddItemButtonContained">
  </style>

    <style name="AddYearButton" parent="AddItemButtonContained">
    </style>

    <style name="AddSemesterButton" parent="AddItemButtonContained">
        <item name="backgroundTint">@color/semesterBackground</item>
    </style>

    <!--There's a corresponding dark style theme too-->
    <style name="ActionBar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/powerPlannerBlue</item>
    </style>

  <style name="MenuButtonAdd">
    <item name="android:title">{Calendar_FullCalendarAddButton.ToolTipService.ToolTip}</item>
    <item name="android:icon">@drawable/ic_add_24px</item>
    <item name="android:iconTint">@android:color/white</item>
  </style>

    <style name="MenuButtonSave">
        <item name="android:title">{String_Save}</item>
        <item name="android:icon">@drawable/ic_check_white_36dp</item>
    </style>

    <style name="MenuButtonDelete">
        <item name="android:title">{MenuItemDelete}</item>
    </style>

    <style name="MenuButtonEditClass">
      <item name="android:title">{String_EditClass}</item>
      <item name="android:showAsAction">never</item>
    </style>

    <style name="MenuButtonDeleteClass" parent="MenuButtonDelete">
        <item name="android:title">{String_DeleteClass}</item>
        <item name="android:showAsAction">never</item>
    </style>

    <!--TODO: Need a done icon-->
    <style name="MenuButtonDone">
        <item name="android:title">Done</item>
        <item name="android:icon">@drawable/ic_check_white_36dp</item>
    </style>

    <style name="MenuButtonEdit">
        <item name="android:title">{AppBarButtonEdit.Label}</item>
        <item name="android:icon">@drawable/ic_edit_white_24dp</item>
    </style>
    
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">  
        <item name="android:padding">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/fullWidthItemHeight</item>
    </style>
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="FullWidthNonAccentBorderlessButton" parent="BorderlessButton">
        <item name="android:textColor">@color/foregroundFull</item>
    </style>

    <style name="FullWidthSpinner">
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fullWidthItemHeight</item>
    </style>

    <style name="FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">#FFFFFF</item>
        <item name="rippleColor">@color/primaryLight</item>
    </style>
    
    <style name="PowerPlannerBlueButton">
        <item name="android:background">#546BC7</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="WhiteEditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>
    
</resources>