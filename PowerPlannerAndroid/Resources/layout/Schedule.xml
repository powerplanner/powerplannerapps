<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!--The visual schedule goes up here-->
    <LinearLayout
        android:id="@+id/NormalContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">
      
        <!--Week and change week bar-->
      <androidx.appcompat.widget.Toolbar
        android:id="@+id/WeekToolbar"
        style="@style/ActionBar">
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="3dp"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:gravity="bottom"
            android:textColor="#FFFFFF"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:gravity="bottom"
            android:text="-"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"
            android:gravity="bottom"
            android:textColor="#FFFFFF"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:gravity="bottom"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Small"
            android:gravity="bottom"
            android:textColor="#FFFFFF"/>
          
        </LinearLayout>
        
      </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <!--Editing section is down here-->
    <ScrollView
        android:id="@+id/EditingContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Classes list-->
            <LinearLayout
                android:id="@+id/EditingClassesViewGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!--Add class button-->
            <Button
                android:id="@+id/ButtonAddClass"
                style="@style/AddItemButton"
                android:layout_marginTop="5dp"/>
            
        </LinearLayout>

    </ScrollView>
  
  <!--Welcome section is here-->
  <FrameLayout
    android:id="@+id/WelcomeContent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:visibility="gone">

        <LinearLayout
            android:id="@+id/ReturningUserContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
			  android:id="@+id/SchedulePage_TextViewReturningUser"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"/>
      
            <Button
              style="@style/PowerPlannerBlueButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:maxWidth="200dp"
              android:id="@+id/ButtonLogIn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
              android:id="@+id/SchedulePage_TextViewWelcomeTitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:gravity="center_horizontal"
              style="@android:style/TextAppearance.Large"/>

			<TextView
              android:id="@+id/SchedulePage_TextViewWelcomeSubtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:textAlignment="center"
              android:gravity="center_horizontal"
              style="@android:style/TextAppearance.Small"/>
      
            <Button
              style="@style/PowerPlannerBlueButton"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="32dp"
              android:maxWidth="200dp"
              android:layout_gravity="center_horizontal"
              android:id="@+id/ButtonWelcomeAddClass"/>
        </LinearLayout>
    
  </FrameLayout>

</LinearLayout>
