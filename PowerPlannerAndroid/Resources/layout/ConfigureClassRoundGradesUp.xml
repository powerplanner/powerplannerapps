<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/SwitchRoundGradesUp"
        android:text="{ClassPage_ToggleRoundGradesUp.Header}"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        local:Binding="{Source=RoundGradesUp, Target=Checked, Mode=TwoWay}; {Source=IsEnabled, Target=Enabled}"/>

    <TextView
      android:text="{ClassPage_TextBlockRoundGradesUpHelpBody.Text}"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"/>

  </LinearLayout>

</ScrollView>
