<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--I will programmatically update these based on display state-->
        <InterfacesDroid.Views.MyCalendarView
            android:id="@+id/CalendarView"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>

        <PowerPlannerAndroid.Views.Controls.DayPagerControl
            android:id="@+id/DayPagerControl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <PowerPlannerAndroid.Views.Controls.FloatingAddItemControl
        android:id="@+id/FloatingAddItemControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>