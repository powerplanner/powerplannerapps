<UserControl
    x:Class="InterfacesUWP.Snackbar.BareSnackbarPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InterfacesUWP.Snackbar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    xmlns:snackbar="using:BareMvvm.Core.Snackbar">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">

                    <SolidColorBrush x:Key="SnackbarBackground" Color="#222222"/>
                    <SolidColorBrush x:Key="SnackbarActionForeground" Color="#8494FF"/>

                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">

                    <SolidColorBrush x:Key="SnackbarBackground" Color="#AAAAAA"/>
                    <SolidColorBrush x:Key="SnackbarActionForeground" Color="#5166BC"/>

                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ItemsControl
            ItemsSource="{x:Bind Manager.DisplayedSnackbars}"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            Margin="20,0,20,20">
            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection>
                    <PopupThemeTransition />
                </TransitionCollection>
            </ItemsControl.ItemContainerTransitions>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="snackbar:BareSnackbar">
                    <Grid Background="Transparent" HorizontalAlignment="Center" x:Name="Snackbar" Tapped="Snackbar_Tapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border
                            Background="{ThemeResource SnackbarBackground}"
                            CornerRadius="4"
                            Grid.ColumnSpan="2"/>
                        <TextBlock
                            Text="{x:Bind Message}"
                            Foreground="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                            Margin="12"/>
                        <Button
                            x:Name="ButtonAction"
                            Content="{x:Bind ButtonText}"
                            Visibility="{x:Bind ButtonText, Converter={StaticResource NotNullToVisibilityConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}"
                            RequestedTheme="Dark"
                            Foreground="{ThemeResource SnackbarActionForeground}"
                            Margin="0,0,6,0"
                            Grid.Column="1"
                            FontWeight="Bold"
                            Click="ButtonAction_Click"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
