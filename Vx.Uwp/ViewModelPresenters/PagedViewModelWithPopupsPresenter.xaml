<UserControl
    x:Name="ThisView"
    x:Class="InterfacesUWP.ViewModelPresenters.PagedViewModelWithPopupsPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InterfacesUWP.ViewModelPresenters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <local:PagedViewModelPresenter
            x:Name="ThisPagedViewModelPresenter"
            ViewModel="{x:Bind ViewModel, Mode=OneWay}"/>

        <local:PopupsPresenter
            ViewModel="{x:Bind ViewModel, Mode=OneWay}"/>

        <local:GenericViewModelPresenter
            ViewModel="{x:Bind ViewModel.FullScreenPopup, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.FullScreenPopup, Mode=OneWay, Converter={StaticResource NotNullToVisibilityConverter}}"/>

    </Grid>
    
</UserControl>
